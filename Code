import random
import string 
print("=== PASSWORD GENERATOR ===") 
length = int(input("Enter password length: ")) 
print("Include the following in password?")
use_upper = input("Uppercase letters (y/n): ").lower() 
use_lower = input("Lowercase letters (y/n): ").lower() 
use_digits = input("Digits (y/n): ").lower() 
use_special = input("Special characters (y/n): ").lower() 
characters = "" 
if use_upper == 'y': 
characters += string.ascii_uppercase 
if use_lower == 'y': 
characters += string.ascii_lowercase
if use_digits == 'y': 
characters += string.digits 
if use_special == 'y': 
characters += string.punctuation
if characters == "":
print(" No character set selected. Cannot generate password.") 
else:
password = "" for i in range(length): 
password += random.choice(characters) 
print("\n Generated Password:") 
print(password)
